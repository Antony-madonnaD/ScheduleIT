<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fab">

    <EditText
        android:id="@+id/event"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_event"
        android:layout_marginStart="27dp"
        android:layout_marginLeft="27dp"
        android:layout_marginBottom="-1dp"
        android:layout_toEndOf="@+id/btn_event"
        android:layout_toRightOf="@+id/btn_event"/>
    <Button
        android:id="@+id/btn_event"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="38dp"
        android:textSize="15dp"
        android:background="#FFFFFF"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="128dp"
        android:layout_marginBottom="43dp"
        android:text="event title :" />


    <EditText
        android:id="@+id/in_date"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_date"
        android:layout_marginStart="27dp"
        android:layout_marginLeft="27dp"
        android:layout_marginBottom="-1dp"
        android:layout_toEndOf="@+id/btn_date"
        android:layout_toRightOf="@+id/btn_date"
        />

    <Button
        android:id="@+id/btn_date"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:background="@color/cardview_light_background"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="38dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="216dp"
        android:text="SELECT DATE" />

    <EditText
        android:id="@+id/in_time"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_time"
        android:layout_marginStart="27dp"
        android:layout_marginLeft="27dp"
        android:layout_marginBottom="-1dp"
        android:layout_toEndOf="@+id/btn_time"
        android:layout_toRightOf="@+id/btn_time"
        />

    <Button
        android:id="@+id/btn_time"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/in_date"
        android:layout_alignParentStart="true"
        android:background="@color/cardview_light_background"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="38dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="43dp"
        android:text="SELECT TIME" />

    <Button
        android:id="@+id/btn_image"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_time"
        android:layout_alignParentStart="true"
        android:background="@color/cardview_light_background"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="38dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="43dp"
        android:text="select image" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignBottom="@+id/btn_image"
        android:layout_marginStart="27dp"
        android:layout_marginLeft="27dp"
        android:layout_marginBottom="-152dp"
        android:layout_toEndOf="@+id/btn_image"
        android:layout_toRightOf="@+id/btn_image" />

    <Button
        android:id="@+id/btn_done"
        android:layout_width="149dp"
        android:layout_height="51dp"
        android:layout_above="@+id/event"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="38dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="43dp"
        android:layout_marginBottom="43dp"
        android:onClick="done1"
        android:background="@color/cardview_light_background"
        android:text="done" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn_done"
        android:layout_marginStart="27dp"
        android:layout_marginLeft="27dp"
        android:layout_marginBottom="-1dp"
        android:layout_toEndOf="@+id/btn_done"
        android:layout_toRightOf="@+id/btn_done"
        android:onClick="cancel"
        android:background="@color/cardview_light_background"
        android:text="cancel" />
</RelativeLayout>